<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
                https://jakarta.ee/xml/ns/persistence
                https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Persistence Unit -->
    <persistence-unit name="PU_Transport" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.informatics.entity.Client</class>
        <class>org.informatics.entity.Company</class>
        <class>org.informatics.entity.Order</class>
        <class>org.informatics.entity.Vehicle</class>
        <class>org.informatics.entity.Worker</class>
        <class>org.informatics.entity.Driver</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/transport_company?useSSL=false&amp;serverTimezone=UTC"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>

            <property name="jakarta.persistence.jdbc.password"
                      value="admin"/>

            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <property name="hibernate.show_sql"
                      value="false"/>

            <property name="hibernate.format_sql"
                      value="false"/>
        </properties>
    </persistence-unit>
</persistence>
